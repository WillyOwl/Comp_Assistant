{
  "study_name": "composition_hyperopt_v1",
  "n_trials": 100,
  "optimization_direction": "maximize",
  "metric_name": "val_overall_score",
  
  "search_space": {
    "learning_rate": {
      "backbone_min": 1e-6,
      "backbone_max": 1e-3,
      "head_min": 1e-5,
      "head_max": 1e-2
    },
    
    "batch_size": {
      "choices": [16, 32, 64, 128]
    },
    
    "weight_decay": {
      "min": 1e-6,
      "max": 1e-2
    },
    
    "model_architecture": {
      "hidden_size": {
        "choices": [384, 512, 768, 1024]
      },
      "num_attention_heads": {
        "choices": [6, 8, 12, 16]
      },
      "num_hidden_layers": {
        "min": 6,
        "max": 18
      },
      "backbone": {
        "choices": ["resnet50", "resnet101", "efficientnet_b0", "efficientnet_b3"]
      }
    },
    
    "loss_weights": {
      "rule_of_thirds": {
        "min": 0.5,
        "max": 2.0
      },
      "leading_lines": {
        "min": 0.5,
        "max": 2.0
      },
      "symmetry": {
        "min": 0.5,
        "max": 2.0
      },
      "depth": {
        "min": 0.5,
        "max": 2.0
      }
    },
    
    "augmentation": {
      "color_jitter": {
        "min": 0.0,
        "max": 0.4
      },
      "rotation": {
        "min": 0,
        "max": 15
      }
    },
    
    "dropout": {
      "min": 0.0,
      "max": 0.3
    },
    
    "scheduler": {
      "min_lr_min": 1e-8,
      "min_lr_max": 1e-5
    }
  },
  
  "pruning": {
    "enabled": true,
    "pruner_type": "median",
    "n_startup_trials": 5,
    "n_warmup_steps": 10,
    "interval_steps": 1
  },
  
  "sampling": {
    "sampler_type": "tpe",
    "n_startup_trials": 10,
    "n_ei_candidates": 24
  },
  
  "early_stopping": {
    "patience": 5,
    "min_epochs": 10,
    "max_epochs": 50
  }
}